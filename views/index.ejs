<%- include('partials/header'); -%>
    <div class="container-fluid p-4">
        <%- include('components/add-list'); -%>
            <div class="d-flex align-items-start flex-nowrap">
                <% boards.forEach((item)=> { %>
                    <div class="alert-secondary p-3 mt-3 me-2 rounded">
                        <div class="d-flex justify-content-between">
                            <h3 class="flex-grow-1">
                                <%= item.name %>
                            </h3>
                            <form action="/delete-list/<%=item.id%>" method="post">
                            <div class="remove-item">
                                <button>
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" height="20px"><g data-name="Layer 2"><g data-name="trash-2"><rect width="24" height="24" opacity="0"/><path fill="#aaa" d="M21 6h-5V4.33A2.42 2.42 0 0 0 13.5 2h-3A2.42 2.42 0 0 0 8 4.33V6H3a1 1 0 0 0 0 2h1v11a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V8h1a1 1 0 0 0 0-2zM10 16a1 1 0 0 1-2 0v-4a1 1 0 0 1 2 0zm0-11.67c0-.16.21-.33.5-.33h3c.29 0 .5.17.5.33V6h-4zM16 16a1 1 0 0 1-2 0v-4a1 1 0 0 1 2 0z"/></g></g></svg>
                                </button>
                               
                            </div>
                        </form>
                        </div>
                        
                        <div class="list-group">
                            <% item.listItems.forEach((list)=> { %>
                                <div class="list-group-item mt-3 rounded-2 d-flex align-items-start justify-content-between" id="<%=list.id%>">
                                    <p class="mb-2 flex-grow-1">
                                        <%=list.name%>
                                    </p>
                                    <form action="/delete-list-item/<%=item.id%>/<%=list.id%>" method="post">
                                    <div class="remove-item">
                                        <button>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" height="20"><g data-name="Layer 2"><path fill="#aaa" d="M13.41 12l4.3-4.29a1 1 0 10-1.42-1.42L12 10.59l-4.29-4.3a1 1 0 00-1.42 1.42l4.3 4.29-4.3 4.29a1 1 0 000 1.42 1 1 0 001.42 0l4.29-4.3 4.29 4.3a1 1 0 001.42 0 1 1 0 000-1.42z" data-name="close"/></g></svg>
                                    </button>
                                    </div>
                                </form>
                                </div>
                                <% }) %>
                        </div>
                    



                        <div class="mt-3">
                            <hr>
                            <form action="/add-list-item/<%=item.id%>" method="POST">
                                <div class="d-flex justify-content-between">
                                    <div class="w-75">
                                        <input class="form-control" type="text" name="listItemName" placeholder="Add Item"
                                            autocomplete="off">
                                    </div>
                                    <div class="">
                                        <button class="btn btn-primary" type="submit" name="button">Add</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        
            </div>
            <% }) %>
    </div>
    <%- include('partials/footer'); -%>